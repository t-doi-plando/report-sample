      <!-- ===== ヘッダー（青帯） ===== -->
      <header class="topbar">
        <h1 class="topbar__title">
          <span>診断結果</span><span class="sep">｜</span><span><%= section.title %></span><span class="page-of">(<%= (typeof pageIndex === 'number') ? (pageIndex + 1) : 1 %>/<%= (typeof totalPages === 'number') ? totalPages : 1 %>)</span>
        </h1>
        <dl class="meta">
          <% function wrapEvery10Html(s){ s = String(s || ''); return s.replace(/(.{10})/g, '$1<wbr>'); } %>
          <% const _officeName = report.officeName || "矢崎事業所"; const _officeLong = String(_officeName).length >= 10; %>
          <div class="meta__item">
            <dd class="meta__office <%= _officeLong ? 'meta__office--small' : '' %>"><%- wrapEvery10Html(_officeName) %></dd>
          </div>
          <% const _driverName = report.driverName || "安全 太郎"; const _driverLong = String(_driverName).length >= 10; %>
          <div class="meta__item">
            <dd class="meta__name <%= _driverLong ? 'meta__name--small' : '' %>"><%- wrapEvery10Html(_driverName) %></dd>
          </div>
        </dl>
      </header>
