      <% const driverNameText = report.driverName || '氏名未設定'; %>
      <% const isDriverNameLong = driverNameText.length >= 10; %>
      <% const companyNameText = report.companyName || '会社未設定'; %>
      <% const officeNameText = report.officeName || '事業所未設定'; %>
      <% const isCompanyNameLong = companyNameText.length >= 15; %>
      <% const isOfficeNameLong = officeNameText.length >= 15; %>
      <header class="gaiyou-hero">
        <div class="gaiyou-hero__head">
          <div class="gaiyou-hero__primary">
          <div class="gaiyou-hero__title gaiyou-hero__text">今月の安全レポート</div>
            <span class="gaiyou-hero__separator gaiyou-hero__text">|</span>
            <div class="gaiyou-hero__subtitle gaiyou-hero__text">動画一覧</div>
          </div>
          <div class="gaiyou-hero__org">
            <span class="gaiyou-hero__orgName <%= isCompanyNameLong ? 'gaiyou-hero__orgName--long' : '' %>"><%= companyNameText %></span>　
            <span class="gaiyou-hero__orgName <%= isOfficeNameLong ? 'gaiyou-hero__orgName--long' : '' %>"><%= officeNameText %></span>
          </div>
        </div>
      </header>
      <div class="gaiyou-metaRow">
        <div class="gaiyou-metaRow__item">
          <span class="gaiyou-metaRow__label">ドライバー</span>
          <span class="gaiyou-metaRow__value <%= isDriverNameLong ? 'gaiyou-metaRow__value--long' : '' %>"><%= driverNameText %></span>
        </div>
        <div class="gaiyou-metaRow__item">
          <span class="gaiyou-metaRow__label">稼働日数</span>
          <span class="gaiyou-metaRow__value"><%= (report.periodLabel || '') %> <%= (report.daysCountLabel || '') %></span>
        </div>
        <div class="gaiyou-metaRow__item">
          <span class="gaiyou-metaRow__label">走行時間</span>
          <span class="gaiyou-metaRow__value"><%= report.drivingTimeLabel || '' %></span>
        </div>
      </div>
