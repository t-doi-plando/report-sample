      <!-- ===== ハイライト3カード ===== -->
      <section class="highlights">
        <% const cards = report.highlights_sasetumae || []; %>
        <% cards.forEach(c => { %>
          <article class="hl hl--<%= c.kind %>">
            <div class="hl__band hl__band--sasetumae">
              <span><%= c.badge %></span>
              <% if (c.kind === 'danger' && c.risk !== undefined && c.risk !== null) { %>
                <span class="hl__risk-count">
                  <span class="hl__main-value">
                    <span class="hl__value-with-exclamation"><%= c.risk %></span>回
                  </span>
                </span>
              <% } else if (c.kind === 'warn' && c.rate !== undefined && c.rate !== null) { %>
                <span class="hl__risk-count">
                  <span class="hl__main-value">
                    <span class="hl__value-with-exclamation"><%= c.rate %></span>%
                  </span>
                  <span class="hl__sub-value">
                    (<%= c.violations %>回/<%= c.total %>回)
                  </span>
                </span>
              <% } %>
            </div>
            
            <div class="hl__divider"></div>
            <p class="hl__text"><%= c.text %></p>
          </article>
        <% }) %>
      </section>

